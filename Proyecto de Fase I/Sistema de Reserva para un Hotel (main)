#include <iostream>
#include <string>
#include <vector>
#include <map>
#include <cctype>
using namespace std;
using namespace std;
using namespace std;

class Administrador;
class Huesped;


class Huesped {
private:
    string nombre;
    string dni;
    string nacionalidad;

public:
    Huesped(string nombre, string dni, string nacionalidad): 
    nombre(nombre), dni(dni), nacionalidad(nacionalidad) {}
    
    void mostrarDatosHuesped()  const
    {
       cout <<"======Datos de Huesped========"<<endl; 
       cout <<"\nNombre: "<< nombre 
            << "\nDNI: " << dni 
            << "\nNacioanlidad: " << nacionalidad 
            <<"\n"<< endl;
    }
    
};
bool esNumeroValido(const string& dni) {
    if (dni.length() != 8) {
        return false;
    }
    for (char c : dni) {
        if (!isdigit(c)) return false;
    }
    return true;
}

int main()
{    
    vector <string> list2 = {
        "1. Registrar usuario",
        "2. Actualizar datos de usuario", 
        "3. Buscar habitación", 
        "4. Reservar habitacion", 
        "5. Cancelar reserva", 
        "6. Salir"};
    vector <string> list1 = {
        "1. Usuario", 
        "2. Administrador"};
        
    Huesped* huesped;
    Administrador* administrador;
    int opcion1;
    int opcion2;
    string nombre;
    string dni;
    string nacionalidad;
    

    do{
        cout <<"\n========Menú======"<<endl;
        for (const string& opcion1 :  list1) {
            cout << opcion1 << endl;
        };
        cout << "\nSeleccione una opcion: ";
        cin >> opcion1;
        
        switch(opcion1) {
            case 1: 
            {
                for (const string& opcion2 :  list2) {
                    cout << opcion2 << endl;
                };
                cout << "\n[1]. Seleccione una opcion: ";
                cin >> opcion2;  
                cin.ignore();
                
                switch(opcion2) {
                    case 1: {
                        cout << "[1] Ingrese su nombre: ";
                        getline(cin, nombre);
                        
                        cout << "[1] Ingrese su DNI (8 dígitos)";
                        cin >> dni;
                        
                        if (esNumeroValido(dni)) {
                            cout << "(°) DNI válido: ";
                        } else {
                            cout << "(!) DNI inválida. Debe ingresar exactamente 8 dígitos." << endl;
                        }
                        
                        cout << "[1]Ingrese su nacionalidad: ";
                        cin >> nacionalidad;
                        cin.ignore();
        
                        huesped = new Huesped(nombre, dni, nacionalidad);
                        huesped->mostrarDatosHuesped();
                        
                    }
                }
                
                
                
                
                break;
            }
        }
        
    }while(opcion1 != 3);
    
}
