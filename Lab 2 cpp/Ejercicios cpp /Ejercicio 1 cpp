int obtenerOpcionValida(string mensaje, vector<int> opciones) {
    int opcion;
    while (true) {
        cout << mensaje;
        cin >> opcion;
        
        for (int op : opciones) {
            if (opcion == op) {
                return opcion;
            }
        }
        cout << "Opción no válida. Intente de nuevo.\n";
    }
}



int obtenerOpcionValida(string mensaje, vector<int> opciones) {
    int opcion;
    while (true) {
        cout << mensaje;
        cin >> opcion;
        
        for (int op : opciones) {
            if (opcion == op) {
                return opcion;
            }
        }
        cout << "Opción no válida. Intente de nuevo.\n";
    }
}


